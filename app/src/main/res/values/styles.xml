<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Ingredients">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:padding">@dimen/bigMargin</item>
        <item name="android:lineSpacingExtra">@dimen/lineSpacing</item>
        <item name="android:layout_marginRight">@dimen/marginHorizontal</item>
        <item name="android:layout_marginLeft">@dimen/marginHorizontal</item>
        <item name="android:layout_marginTop">@dimen/marginVertical</item>
    </style>

</resources>
